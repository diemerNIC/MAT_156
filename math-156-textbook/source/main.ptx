                       (mygate.in 1) node[anchor=east] {$A$}
                       (mygate.in 2) node[anchor=east] {$B$}
                       (mygate.bin 1) node[notcirc,left] {}
                       (mygate.out) node[anchor=west] {$\nota{}B$};
                    \end{circuitikz}
                  </latex-image>
                </image>
              </solution>
            </exercise>
            <exercise>
              <statement>
                <m>\ \nota\,\notb</m>
              </statement>
