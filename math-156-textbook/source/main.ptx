                  <row>
                    <cell halign="right">
                      <m>0</m>
                    </cell>
                    <cell>
                      <m>=A\cdot 0</m>
                    </cell>
                    <cell>
                      Identity
                    </cell>
                  </row>
                  <row>
                    <cell halign="right">
                      <m>0</m>
                    </cell>
                    <cell>
                      <m>=0</m>
                    </cell>
                    <cell>
                      Identity
                    </cell>
                  </row>
                </tabular>
              </solution>
            </exercise>
            <exercise>
              <statement>
                <m>\ B\cdot 1+A\nota=\mybnot{\notb\cdot 1}</m>
