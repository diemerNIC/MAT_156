                <m>\ \mybnot{A\notb}</m>
              </statement>
              <solution>
                <image width="30%" xml:id="fig-exer-gate-not-AornotB">
                  <latex-image>
                    \begin{circuitikz}
                      \ctikzset{logic ports=ieee}
                      \draw (0,0) node[or port] (mygate) {}
                       (mygate.in 1) node[anchor=east] {$A$}
                       (mygate.in 2) node[anchor=east] {$B$}
