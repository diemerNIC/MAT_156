            </exercise>
            <exercise>
              <statement>
                <m>\ \mybnot{\mybnot{\nota\,\notb}+\notc}</m>
              </statement>
              <solution>
                <image width="50%" xml:id="fig-exer-gate-not--not-notAandnotB-and-notC">
                  <latex-image>
                    \begin{circuitikz}
