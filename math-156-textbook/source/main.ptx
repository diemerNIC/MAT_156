                <tabular>
                  <row>
                    <cell halign="center">
                      <m>(p\myor p)\myand(q\myor 0)</m>
                    </cell>
                    <cell>
                      <m>\Leftrightarrow p\myand(q\myor 0)</m>
                    </cell>
