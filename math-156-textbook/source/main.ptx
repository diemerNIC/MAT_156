                <md>
                  <mrow>
                    a_1 \amp = 2
                  </mrow>
                  <mrow>
                    a_2 \amp = 3
                  </mrow>
                  <mrow>
                    a_n \amp = a_{n - 1} \times a_{n - 2} \text{   for } n \ge 3
                  </mrow>
                </md>
              </statement>
              <solution>
                <m>2, 3, 6, 18</m>
              </solution>
            </exercise>
            <exercise>
              <statement>
                <md>
                  <mrow>
                    a_1 \amp = 2
                  </mrow>
