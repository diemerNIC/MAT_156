              <solution>
                <tabular>
                  <row>
                    <cell halign="right">
                      <m>B\cdot 1+A\nota</m>
                    </cell>
                    <cell>
                      <m>=\mybnot{\notb\cdot 1}</m>
                    </cell>
                    <cell>
                    </cell>
                  </row>
                  <row>
                    <cell halign="right">
                      <m>B+A\nota</m>
                    </cell>
                    <cell>
                      <m>=\mybnot{\notb}</m>
                    </cell>
                    <cell>
                      Identity
                    </cell>
                  </row>
                  <row>
                    <cell halign="right">
                      <m>B+0</m>
                    </cell>
                    <cell>
                      <m>=\mybnot{\notb}</m>
                    </cell>
                    <cell>
                      Complement
                    </cell>
                  </row>
                  <row>
                    <cell halign="right">
                      <m>B</m>
                    </cell>
                    <cell>
                      <m>=\mybnot{\notb}</m>
                    </cell>
                    <cell>
                      Identity
