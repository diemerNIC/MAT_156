                  <row>
                    <cell>
                    </cell>
                    <cell>
                      <m>\Leftrightarrow p\myor 0</m>
                    </cell>
                    <cell>
                      Complement
                    </cell>
                  </row>
                  <row>
                    <cell>
                    </cell>
                    <cell>
                      <m>p</m>
                    </cell>
                    <cell>
                      Identity
                    </cell>
                  </row>
                </tabular>
              </solution>
            </exercise>
            <exercise>
              <statement>
                <m>\ (p\myor p)\myand (q\myor 0)</m>
              </statement>
